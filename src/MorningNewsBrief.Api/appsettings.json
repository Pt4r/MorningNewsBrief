{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "InPolicyDb": "Server=(localdb)\\MSSQLLocalDB;Database=InPolicy;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "General": {
    "ApplicationName": "Morning News Briefing",
    "ApplicationDescription": "A scalable and efficient system that fetches data from various sources, aggregates it, and delivers it through a single API interface.",
    "Host": "https://localhost:1337",
    "Organization": "Stratos Palaiologos",
    "EnableSwagger": true
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "get:/api/news-briefing",
        "Period": "1s",
        "Limit": 2
      }
    ]
  }
}
